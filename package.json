{
  "name": "magic-performance-benchmarking",
  "version": "1.0.0",
  "description": "Performance benchmarking framework for Magic Checkout using Playwright",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "web:dev": "cd dashboard && npm run dev && cd ..",
    "web:build": "cd dashboard && npm run build && cd ..",
    "web:start": "cd dashboard && npm run start && cd ..",
    "start": "npm run build && node dist/index.js",
    "debug": "npm run build && node --inspect dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts --max-warnings 0 && cd dashboard && npm run lint && cd ..",
    "lint:fix": "eslint src/**/*.ts --fix --max-warnings 0 && cd dashboard && npm run lint:fix && cd ..",
    "pretty:fix": "prettier --write src/**/*.ts dashboard/**/*.{ts,tsx,css,json}",
    "pretty": "prettier --check src/**/*.ts dashboard/**/*.{ts,tsx,css,json}",
    "validate": "npm run lint && npm run build",
    "prepare": "npm run build",
    "docker:build": "docker build --target benchmarking -t magic-benchmarking:latest .",
    "docker:build:dashboard": "docker build --target dashboard -t magic-dashboard:latest .",
    "docker:run": "docker-compose --profile benchmarking up benchmarking",
    "docker:dashboard": "docker-compose --profile dashboard up dashboard",
    "docker:full": "docker-compose up magic-benchmarking dashboard-combined",
    "docker:test": "./scripts/test-docker.sh",
    "setup": "./scripts/quick-start.sh",
    "validate:workflows": "./scripts/validate-workflows.sh"
  },
  "keywords": [],
  "author": "arjun.vc@razorpay.com",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.10.0",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.46.2"
  },
  "dependencies": {
    "playwright": "^1.40.0"
  }
}
