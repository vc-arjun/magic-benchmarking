{
  "name": "magic-performance-benchmarking",
  "version": "1.0.0",
  "description": "Performance benchmarking framework for Magic Checkout using Playwright",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "npm run build && node dist/index.js",
    "debug": "npm run build && node --inspect dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts --max-warnings 0",
    "lint:fix": "eslint src/**/*.ts --fix --max-warnings 0",
    "pretty:fix": "prettier --write src/**/*.ts",
    "pretty": "prettier --check src/**/*.ts"
  },
  "keywords": [],
  "author": "arjun.vc@razorpay.com",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.10.0",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.46.2"
  },
  "dependencies": {
    "playwright": "^1.40.0"
  }
}
